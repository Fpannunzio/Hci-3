<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorButtons</item>
    </style>

    <style name="outlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="strokeColor">@drawable/outlined_button</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@drawable/outlined_button_text</item>
    </style>

    <style name="Theme.ToolbarTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorSecondary</item>

        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="titleTextColor">@color/colorCardTitle</item>

        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>

        <item name="color">@color/colorCardTitle</item>

    </style>
</resources>