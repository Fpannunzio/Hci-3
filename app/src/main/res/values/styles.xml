<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorButtons</item>
    </style>

    <style name="outlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="strokeColor">@drawable/outlined_button</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@drawable/outlined_button_text</item>
    </style>

    <style name="Theme.ToolbarTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorSecondary</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="titleTextColor">@color/colorCardTitle</item>

        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>

        <item name="color">@color/colorCardTitle</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>
</resources>